@model Category
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Edit";
}
<form method="post">


    <fieldset>
        <div class="form-group">
            <label asp-for="Name" class="form-label mt-4">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DisplayOrder" class="form-label mt-4">Display Order</label>
            <input asp-for="DisplayOrder" type="number" class="form-control" placeholder="Enter Diplay Order">
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="p-3 text-center">
            <button type="submit" class="btn btn-primary" style="width: 150px">Edit</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width: 150px">Back to List</a>
        </div>
    </fieldset>

</form>

<!--For client side validation and we do not want to reload the page everytime and hit the server-->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


